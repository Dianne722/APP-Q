<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/primary"
            android:gravity="center"
            android:text="Demo"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/clock1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_timer_24"/>

            <ImageView
                android:id="@+id/timer1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_update_24" />

            <ImageView
                android:id="@+id/calendar1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_today_24" />
        </LinearLayout>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transule"
            android:hint="电话号码"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/message1"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="15dp"
            android:background="@drawable/transule"
            android:hint="短信内容"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/transule"
            android:src="@drawable/baseline_photo_size_select_actual_24"
            android:textSize="28dp"
            tools:ignore="MissingConstraints"/>


        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/call1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/phone2" />


            <ImageView
                android:id="@+id/talk1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/duanxin2" />

            <ImageView
                android:id="@+id/peoples"
                    android:layout_weight="1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_supervisor_account_24"/>

                <ImageView
                    android:id="@+id/takePhoto"
                    android:layout_weight="1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/camera3"/>

                <ImageView
                    android:id="@+id/ZHI"
                    android:layout_weight="1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/zhifu"/>
        </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yinShi"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yuanjiao_button"
            android:text="隐式意图打开"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/baiDu"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/yuanjiao_button"
            android:text="打开百度网页"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>